<body class="m">

<div class="container">
  <h1 class="insert">{{viewTitle}}</h1>

  <form action="/employee" method="POST" class="was-validated">
  <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group" style="padding-top: 5px;">
      <label for="name"><b>Fullname:</b></label>
      <input type="text" class="form-control" id="name" placeholder="Full Name" name="fullName" required>
    </div>
    <div class="form-group" >
      <label for="email"><b>Email:</b> </label>
      <input type="text" class="form-control" id="email" placeholder="Email" name="email" value="{{employee.email}}" required>
      <div class="text-danger">
        {{employee.emailError}}
      </div>
    </div>
    <div class="form-group" >
        <label for="mobile"><b>Mobile:</b></label>
        <input type="text" class="form-control" id="mobile" placeholder="Mobile" name="mobile" value="{{employee.mobile}}" required>
        <label for="mobile"><b>City:</b></label>
        <input type="text" class="form-control" id="city" placeholder="City" name="city" value="{{employee.city}}" required>
      </div>
    <div >
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/employee/list" class="btn btn-secondary" ><i class="fas fa-database"></i></a>
    </div>
    
  </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.0-beta2/js/bootstrap.bundle.min.js" 
